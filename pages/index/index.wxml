<!--index.wxml-->
<view class="container">
  <form bindsubmit="formSubmit" bindreset="formReset" report-submit>
 

  <view class="section">
    <view class="section__title">Name</view>
    <input name="name" placeholder="please name here" />
  </view>
  <view class="section">
    <view class="section__title">Age</view>
    <input name="age" placeholder="please age here" />
  </view>
 
  <view class="btn-area">
    <button formType="submit">Submit</button>
    <button formType="reset">Reset</button>
  </view>
</form>
</view>
